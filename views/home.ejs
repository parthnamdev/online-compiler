        </select>
      </div>


      <h2 class="main-text mt-5">Enter Code: </h2>

      <div class="form-group mt-4">
    
        <textarea  id="code" name="code" placeholder="Write Code here" cols="80" rows="20"
          class="form-control "><%=precode%></textarea>

      </div>
      <h2 class="mt-5">Input:</h2>
      <textarea id="input" name="input" placeholder="Enter Input here" class="form-control mt-4"></textarea>
      <button class="btn btn-success mt-4">Run Code</button>
    </form>

    
    
      <button class="btn btn-success mt-4 save-file-btn" id="btn1" data-bs-toggle="modal" data-bs-target="#exampleModal">Save file</button>
  
      <button type="button" class="btn btn-success mt-4 save-file-btn" id="btn2" disabled>
        Run the code first to save
      </button>
      
      
    <div class="modal" tabindex="-1" id="exampleModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="/addFile" method="post" id="hidden-form">
          <input type="hidden" value="<%=lang%>" name="lang">
          <input type="hidden" value="<%=precode%>" name="code" id="hidden-add-file-code">
          <div class="modal-header">
            <h5 class="modal-title">Save file as</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="filename" class="form-label">Filename</label>
              <input type="text" class="form-control" id="filename" name="filename" autocomplete="off">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </form>
      </div>
    </div>

    


    <h2 class="mt-5">Output:</h2>
    <textarea readonly cols="40" rows="8" class="form-control mt-4 mb-5" id="output"><%=outputcode%></textarea readonly>
      <script> 
        var save = document.getElementById("output").value;
        let btn1 = document.getElementById("btn1");
        let btn2 = document.getElementById("btn2");
        if(save !== "default-output"){
          btn1.style.display = "inline";
          btn2.style.display = "none";
        } else {
          btn2.style.display = "inline";
          btn1.style.display = "none";
        }
        </script>
    <div class="files mb-5">
      <h2 class="mt-5">User files</h2>

      <% if(files.length > 0){ %>
      
        <% files.forEach(file => { %>

          
            
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <!-- <form action="" method="post"> -->
                <h5 class="card-title" onclick="openCode('<%= file.filename %>')"><%= file.filename %></h5>
                <input type="hidden" value="<%=file.code%>" id="<%= file.filename %>">
                <!-- </form> -->
                <% if(file.code.length > 100){ %>
                <p class="card-text"><%= file.code.substring(0,100) %></p>
                <% } else { %>
                <p class="card-text"><%= file.code %></p>
                <% } %>
                <form action="/deleteFile" method="post">
                <button type="submit" class="card-link btn-close delete-file-btn"></a>
                  <input type="hidden" value="<%=file.filename%>" name="filename">
                  <!-- <input type="hidden" value="<%=file.code%>" name="code"> -->
                  <input type="hidden" value="<%=lang%>" name="lang">
                </form>

              </div>
            </div>
          

        <% }); %>

      <% } %>

      

    </div>
      <script src="ace-builds/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
      <script>
          var select_lang = document.getElementById("selector");
          select_lang.selectedIndex = "<%= lang %>";

          

          function createEditor(name) {
              // find the textarea
              var textarea = document.querySelector("form textarea[name=" + name + "]");
              // create ace editor 
              var editor = ace.edit();
              editor.setTheme("ace/theme/monokai");
              editor.session.setMode("ace/mode/c_cpp");
              editor.container.style.height = "500px";
              editor.session.setValue(textarea.value);
              // editor.container.style.fontSize = "1.5rem";

              editor.setOptions({
                  fontSize: "1.5rem"
              })
              
              // replace textarea with ace
              textarea.parentNode.insertBefore(editor.container, textarea)
              textarea.style.display = "none"

              // find the parent form and add submit event listener
              var form = textarea

              while (form && form.localName != "form") form = form.parentNode
              form.addEventListener("submit", function() {
                  // update value of textarea to match value in ace
                  textarea.value = editor.getValue()
              }, true)
          }


          createEditor("code");

          function openCode(file) {
            const cod = document.getElementById(file);
            textToClipboard(cod.value);
            alert("Code copied. Paste in the editor area to run.");
          }
          
          function textToClipboard(e) {
            var t = document.createElement("textarea");
            document.body.appendChild(t),
              (t.value = e),
              t.select(),
              document.execCommand("copy"),
              document.body.removeChild(t);
          }
    </script>
     



